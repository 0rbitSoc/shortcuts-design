{# INTRO #}
<div class="row">
    <div class="col-12 col-lg-6">
        <h3>Shortcuts.design</h3>
        <h1>Every shortcut for designers, centralized and searchable.</h1>
    </div>
</div>
<div class="row">
    <div class="col-12 col-lg-3">
        <a href="https://github.com/michelvanheest/shortcuts-design-data" target="_blank" class="button button-secondary">Add a tool</a>
    </div>
    <div class="col-12 col-lg-3">
        <a href="https://www.michelvanheest.com?ref=shortcuts.design" target="_blank" id="profile">
            <img src="/assets/img/avatar-color.png" id="profile-avatar" alt="Michel van Heest - Creator of Shortcuts.design">
            <div id="profile-text">
                <h5>Created by</h5>
                <h4>Michel van Heest</h4>
            </div>
        </a>
    </div>
</div>

<div class="row tools-overview">
    <div class="col-12 col-lg-3">
        <img src="/assets/img/toolGroup-design.png" alt="Design Shortcuts Icon">
        <h2>Design shortcuts<h2>
    </div>
    <div class="col-12 col-lg-9">
        {% set toolslist = collections.tools %}
        {% for tool in toolslist %}
            {% if tool.data.toolGroup == "Design" %}
                {% include "toolslist.njk" %}
            {% endif %}
        {% endfor %}
    </div>
</div>
<div class="row tools-overview">
    <div class="col-12 col-lg-3">
        <img src="/assets/img/toolGroup-development.png" alt="Development Shortcuts Icon">
        <h2>Development shortcuts<h2>
    </div>
    <div class="col-12 col-lg-9">
        {% set toolslist = collections.tools %}
        {% for tool in toolslist %}
            {% if tool.data.toolGroup == "Development" %}
                {% include "toolslist.njk" %}
            {% endif %}
        {% endfor %}
    </div>
</div>
<div class="row tools-overview">
    <div class="col-12 col-lg-3">
        <img src="/assets/img/toolGroup-productivity.png" alt="Productivity Shortcuts Icon">
        <h2>Productivity shortcuts<h2>
    </div>
    <div class="col-12 col-lg-9">
        {% set toolslist = collections.tools %}
        {% for tool in toolslist %}
            {% if tool.data.toolGroup == "Productivity" %}
                {% include "toolslist.njk" %}
            {% endif %}
        {% endfor %}
    </div>
</div>

